{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "outDir": "./dist",
    "rootDir": "./",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },

  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
